{
  "compilerOptions": {
    "module": "nodenext",
    "target": "es2017",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "skipLibCheck": true
  },
  "typedocOptions": {
    "entryPoints": ["src"],
    "out": "docs",
    "plugin": [
      "typedoc-plugin-missing-exports",
      "typedoc-plugin-rename-defaults",
      "typedoc-plugin-markdown"
    ],
    "excludeExternals": true
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": ["node_modules"]
}
